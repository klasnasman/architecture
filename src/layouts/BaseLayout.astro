---
import "@styles/import.css";
import Header from "@components/Header.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
const canonicalURL = (Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="description" content="Wedding Photographer based in Stockholm, Sweden." />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:title" content="Klas Näsman Wedding Photography" />
    <meta property="og:description" content="Wedding Photographer based in Stockholm, Sweden." />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Klas Näsman Wedding Photography" />
    <meta property="og:url" content={canonicalURL} />
    <meta name="theme-color" content="#000000" />
    <link rel="canonical" href={canonicalURL} />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <link rel="manifest" href="/manifest.json" />
  </head>
  <body>
    <Header />
    <main class="main">
      <slot />
    </main>
    <script>
      import "/src/assets/js/gridSizeLazyLoad.js";
    </script>
  </body>
</html>
